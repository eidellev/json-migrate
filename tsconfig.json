{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["journey-template", "node_modules", "dist"]
}
